<?php
$params = $this->vars();
if (!count($params)) {
    return;
}
/** @var $param \WidRestApiDocumentator\ParamInterface */
$esc = $this->plugin('EscapeHtml');
?>
<div class="api-params">
    <h5>Query params</h5>
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Required</th>
            <th>Description</th>
        </tr>
        <?php foreach($params as $param): ?>
            <tr>
                <td><?= $esc($param->getName()) ?></td>
                <td><?= $esc($param->getType()) ?></td>
                <td><?= $esc($param->isRequired() ? 'yes' : 'no') ?></td>
                <td><?= $esc($param->getDescription()) ?></td>
            </tr>
        <?php endforeach; ?>
    </table>
</div>